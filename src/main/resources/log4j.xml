<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>


	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- 
			<param name="ConversionPattern"
				value="[IPL - %5p] [%d{ISO8601}] [%t] [%c{1} - %L] %m%n" />
			log4j.appender.Stdout.layout.conversionPattern=%-5p - %-26.26c{1} - %m\n
			-->
			<param name="ConversionPattern" value="%p [%d{HH:mm:dd,SSS}] (%c{3}:%M:%L) - %m%n"/>
		</layout>
	</appender>

	<appender name="allLog" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${logFolder}/all.log" />
		<param name="MaxFileSize" value="1000KB" />
		<param name="MaxBackupIndex" value="20" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%p [%d] (%c{1}:%M:%L) - %m%n"/>
		</layout>
	</appender>

	<appender name="securityLog" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${logFolder}/security.log" />
		<param name="MaxFileSize" value="1000KB" />
		<param name="MaxBackupIndex" value="20" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%p [%d{HH:mm:dd}] (%c:%M:%L) - %m%n"/>
		</layout>
	</appender>

	<appender name="springLog" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${logFolder}/spring.log" />
		<param name="MaxFileSize" value="1000KB" />
		<param name="MaxBackupIndex" value="20" />
		<layout class="org.apache.log4j.PatternLayout">
			<!--   <param name="ConversionPattern"		value="[IPL - %-5p] {%t: %d{dd.MM.yyyy - HH.mm.ss,SSS}} %m%n" /> -->
			<param name="ConversionPattern" value="%p [%d] (%c{3}:%M:%L) - %m%n"/>

		</layout>
	</appender>

	<appender name="wicketLog" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${logFolder}/wicket.log" />
		<param name="MaxFileSize" value="1000KB" />
		<param name="MaxBackupIndex" value="20" />
		<layout class="org.apache.log4j.PatternLayout">
			<!--   <param name="ConversionPattern"		value="[IPL - %-5p] {%t: %d{dd.MM.yyyy - HH.mm.ss,SSS}} %m%n" /> -->
			<param name="ConversionPattern" value="%p [%d] (%c{3}:%M:%L) - %m%n"/>

		</layout>
	</appender>

	<appender name="auditLog" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${logFolder}/audit.log" />
		<param name="MaxFileSize" value="1000KB" />
		<param name="MaxBackupIndex" value="20" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%p [%d] (%C{3}:%M:%L) - %m%n"/>
		</layout>
	</appender>

	<appender name="appLog" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${logFolder}/application.log" />
		<param name="MaxFileSize" value="1000KB" />
		<param name="MaxBackupIndex" value="20" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%p [%d] (%C{3}:%M:%L) - %m%n"/>
		</layout>
	</appender>



	<logger name="com.flurdy">
		<level value="debug" />
		<appender-ref ref="appLog" />
		<appender-ref ref="console" />
	</logger>

	<logger name="org.springframework">
		<level value="warn" />
		<appender-ref ref="springLog" />
	</logger>


	<logger name="org.apache.wicket.version">
		<level value="info" />
		<appender-ref ref="console" />
	</logger>
	<logger name="org.apache.wicket.RequestCycle">
		<level value="info" />
		<appender-ref ref="console" />
	</logger>
	<logger name="org.apache.wicket.protocol.http.HttpSessionStore">
		<level value="info" />
		<appender-ref ref="console" />
	</logger>
	<logger name="org.apache.wicket">
		<level value="warn" />
		<appender-ref ref="wicketLog" />
	</logger>


	<logger name="org.apache">
		<level value="warn" />
		<appender-ref ref="allLog" />
	</logger>

	<logger name="org.springframework.ws.soap.security">
		<level value="warn" />
		<appender-ref ref="securityLog" />
	</logger>
	<logger name="org.springframework.security">
		<level value="warn" />
		<appender-ref ref="securityLog" />
	</logger>
	<logger name="org.acegisecurity">
		<level value="warn" />
		<appender-ref ref="securityLog" />
	</logger>

	<root>
		<level value="warn" />
		<appender-ref ref="allLog" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>


