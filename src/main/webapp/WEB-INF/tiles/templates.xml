<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="gridTemplate" template="/WEB-INF/views/nautical/grid.jsp">
		<put-attribute name="headerTitle" type="string" value="snaps @ flurdy"/>
		<put-attribute name="bowTitle" type="string" value="snaps"/>
		<put-attribute name="version" type="string" value="v.0.2&amp;alpha;"/>
		<put-attribute name="releaseStage" type="string" value="&amp;alpha;lpha"/>
		<put-attribute name="dragons">
			<definition template="/WEB-INF/views/nautical/dragons.jsp">
				<put-attribute name="analyticsId" value="var pageTracker = _gat._getTracker('123');"/>
			</definition>
		</put-attribute>
		<put-attribute name="port" type="string" value=""/>
		<put-attribute name="deck" type="string" value=""/>
		<put-attribute name="starboard" type="string" value=""/>
		<put-attribute name="cargoJQuery" type="string" value=""/>
        <put-attribute name="debug" value="/WEB-INF/views/nautical/debug.jsp"/>
	</definition>

	<definition name="adminTemplate" extends="gridTemplate">
		<put-attribute name="pageTitle" type="string" value="admin"/>
	</definition>

	<definition name="holidayTemplate" extends="gridTemplate">
		<put-attribute name="pageTitle" type="string" value="holiday group"/>
	</definition>

	<definition name="albumTemplate" extends="holidayTemplate">
		<put-attribute name="pageTitle" type="string" value="holiday photo album"/>
	</definition>

	<definition name="errorTemplate" extends="gridTemplate">
		<put-attribute name="pageTitle" type="string" value="error"/>
	</definition>

</tiles-definitions>